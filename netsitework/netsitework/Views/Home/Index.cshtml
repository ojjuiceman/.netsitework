@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/horse.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn about Relatively Stable and the services they offer.
                    <a class="btn btn-secondary" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item ">
            <img src="~/images/horse2.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The stable practices Equine Therapy which incoprates horses into single and group theerapy
                    <a class="btn btn-secondary" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item ">
            <img src="~/images/horse3.jpeg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Do some more reading about Equine therapy and the EGALA therapy model.
                    <a class="btn btn-secondary" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item ">
            <img src="~/images/horse4.jpeg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Learn more about the peeople behind Relatively stable
                    <a class="btn btn-secondary" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="row">
    <div class="col-md-12">
        <h2 style="line-height: 80px;">Relatively Stable </h2>
            <p>Relatively Stable is a horse stable located in Connecticut owned and Managed by Jimmy</p>
            <br>
            <p>The stable lets people practice Equine therapy with the horses individually or as part of a group. </p>
            <br>
            <p>Equine therapy uses an experimental form of therapy calledd the EGALA model</p>
        
    </div>
</div>

@section Scripts {
    <script>
        $("#txtName").keyup(function () {
            if (this.value) {
                $.getJSON("/hello/" + this.value)
                    .then(function (r) {
                        $("#result").html(r.result);
                    });
            } else {
                $("#result").html("");
            }
        });
    </script>
}
